<com.laura.bikesniffer.gui.MapWrapperLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />
    
	<ImageButton 
	    android:id="@+id/swipeButton" 
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_height = "wrap_content"
	    android:layout_width  = "wrap_content"
	    android:background = "@drawable/swipe_button" />

</com.laura.bikesniffer.gui.MapWrapperLayout>